<div class="container">
  <div>
      <h1><%= @submission.user.name %></h1>
      <h2><%= "Current status" %></h2>
      <h3><%= @submission.status %></h3>
      <%= simple_form_for @submission do |f|  %>
        <%= f.input :status, as: :hidden, input_html: {value: "accepted" } %>
        <%= f.submit "accept　✓",{class: 'btn btn-flat'} %>
      <% end %>
      <%= simple_form_for @submission do |f| %>
        <%= f.input :status, as: :hidden, input_html: {value: "rejected" } %>
        <%= f.submit "reject　✗",{class: 'btn btn-flat'}  %>
      <% end %>
  </div>
  <div>
    <% if @submission.cv.attachment %>
    <%= cl_image_tag("#{@submission.cv.key}.jpg",width:800, height:1000) %>
    <% end %>
  </div>
</div>
