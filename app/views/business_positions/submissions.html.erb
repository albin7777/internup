<div class="container">

  <% #<h1>Users#index</h1> %>
  <% #<p>Find me in app/views/users/index.html.erb</p> %>

  <h1> Welcome to the applicants page</h1>
  <h2> here is all your applicants </h2>

    <div class='card_business_user'>
      <% @submissions.each do |submission| %>
      <%=link_to business_submission_path(submission) do %>
        <div class='card'>
          <div><%= submission.user.name %></div>
          <%= image_tag "user_icon.svg", style: "height:50%;width:auto;" %>
          <div><%= submission.position.title %></div>
        </div>
        <%end%>
      <% end %>
    </div>
</div>
